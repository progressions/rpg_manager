<tr id="new_character">
  <%= form_with scope: "character", url: encounter_characters_path do |f| %>
    <%= f.hidden_field :active, value: true %>
    <td class="name">
      <%= f.text_field :name, placeholder: "Name" %>
    </td>
    <td class="health">
      <%= f.text_field :health, type: "number", placeholder: "Health" %>
    </td>
    <td class="control">
      <%= f.submit "Add" %>
    </td>
  <% end %>
</tr>
